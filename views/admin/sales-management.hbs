                                        class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                                        <i class="fa fa-duotone fa-sack-dollar fa-3x text-primary"></i>
                                        <div class="ms-3">
                                            <p class="mb-2">Cash On Delivery</p>
                                            <h5 class="mb-0"> {{data.cod}}</h5>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-xl-6 col-md-6">
