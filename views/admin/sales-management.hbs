                                                <th scope="col">Avg Revenue</th>
                                                <th scope="col">Total Orders</th>

                                            </tr>
                                        </thead>
                                        <tbody class="text-light">
                                            {{!-- {{#each data.currentOrders}} --}}
                                            <tr>
                                                <td><b> daily</b></td>

                                                <td>{{daily.productCount}}</td>
                                                <td>{{daily.totalSales}}</td>

                                                <td>{{daily.cod}}</td>


                                                <td>{{daily.razorpay}}</td>
                                                <td>

                                                    {{daily.paypal}}

                                                </td>
                                                <td>{{daily.wallet}}</td>
                                                <td>{{daily.averageRevenue}}</td>

