                                                <td><b> Yearly</b></td>

                                                <td>{{yearly.productCount}}</td>
                                                <td>{{yearly.totalSales}}</td>

                                                <td>{{yearly.cod}}</td>


                                                <td>{{yearly.razorpay}}</td>
                                                <td>

                                                    {{yearly.paypal}}

                                                </td>
                                                <td>{{yearly.wallet}}</td>
                                                <td>{{yearly.averageRevenue}}</td>
                                                <td>{{yearly.totalOrders}}</td>

                                            </tr>
                                            {{!-- {{/each}} --}}
                                        </tbody>
                                    </table>
                            </div>
                        </div>
                    </section>

                    <section id="all">

                        <div class="row mt-5">
                            <div class="col-md-12 bg-dark">
                                <h1 class="text-center text-white rounded pt-1">All Transactions</h1>
                                {{!-- <button onclick="generateReport()"
                                    class="btn btn-success mb-2 ml-auto mr-5">Download as
                                    PDF</button> --}}
                            </div>
                            <div class="col-md-12 card mt-4" id="salesReport">
                                {{#if data.noData}}
                                <table class="table " id="example1">
                                    {{else}}
                                    <table class="table " id="data">
                                        {{/if}}
                                        <thead class="text-light">
                                            <tr>
                                                <th scope="col">No.</th>
                                                <th scope="col">Date</th>
                                                <th scope="col">User</th>
                                                <th scope="col">Amount</th>
                                                {{!-- <th scope="col">Discount</th> --}}
                                                <th scope="col">Payment</th>
                                                <th scope="col">Status</th>
                                            </tr>
                                        </thead>
                                        <tbody class="text-light">
                                            {{#each data.currentOrders}}
                                            <tr>
                                                <td>{{inc @index}}</td>
                                                <td>{{this.date}}</td>

                                                <td>{{this.deliveryDetails.name}}</td>


                                                <td>{{this.totalAmount}}</td>
                                                {{!-- <td>
                                                    {{#if this.discount}}
                                                    {{this.discount}}
                                                    {{else}}
                                                    0{{/if}}
                                                </td> --}}
                                                <td>{{this.paymentMethod}}</td>
                                                <td>{{this.status}}</td>


                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                            </div>
                        </div>
                    </section>

                </div>
            </div>
        </div>
    </div>
