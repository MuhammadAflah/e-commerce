                                        <div class="ms-3">
                                            <p class="mb-2">Orders Confirmed</p>
                                            <h5 class="mb-0">{{data.successOrders}}</h5>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <div
                                        class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                                        <i class="fa fa-wallet fa-3x text-primary"></i>
                                        <div class="ms-3">
                                            <p class="mb-2">Wallet</p>
                                            <h5 class="mb-0"> {{data.wallet}}</h5>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <div
                                        class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                                        <i class="fa-brands fa-paypal fa-3x text-primary"></i>
                                        <div class="ms-3">
                                            <p class="mb-2">Paypal </p>
                                            <h5 class="mb-0"> {{data.paypal}}</h5>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <div
                                        class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
