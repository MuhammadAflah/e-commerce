<link href="/assets/css/bootstrap-2.min.css" rel="stylesheet">

<!-- Template Stylesheet -->
<link href="/assets/css/style3.css" rel="stylesheet">
<div class="container-fluid position-relative d-flex p-0">
    <div class="container-fluid">
        <div class="contents order-2 order-md-1">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <div class="form-block mt-4" id="cat">
                                <div class="text-center mb-5">
                                    <div class="">
                                        <a href="/admin/coupon-management" class="" style="padding-left: 17rem;"><i
                                                class="fa fa-times text-danger fa-3x" aria-hidden="true"></i></a>
                                    </div>
                                    <h1 class="hw-bold"><u>Edit <strong>Coupon</strong></u></h1>
                                    {{#if catErr}}
                                    <p class="text-center text-danger">{{catErr}}</p>
                                    {{/if}}
                                </div>
                                <form action="/admin/edit-coupon/{{couponDetails._id}}" id="productPage" method="post">
                                    {{#if couponExist}}
                                    <div class="alert alert-danger" role="alert">
                                        This Coupon is already exist!
                                    </div>
                                    {{/if}}
                                    <div class="form-group first">
                                        <label class="text-dark">Coupon code</label>
                                        <input type="text" class="form-control" required name="coupon"
                                            value="{{couponDetails.coupon}}">
                                        <label class="pt-4 text-dark">Starting Date</label>
                                        <input type="Date" class="form-control" required name="starting" id="str"
                                            value="{{couponDetails.starting}}">
                                        <label class="pt-4 text-dark">Expiry Date</label>
                                        <input type="Date" class="form-control" required name="expiry" id="exp"
                                            value="{{couponDetails.expiry}}">
                                        <label class="pt-4 text-dark">Coupon Percentage</label>
                                        <input type="text" class="form-control" required min="1" name="offer" max="95"
                                            value="{{couponDetails.offer}}" {{!-- onkeypress="return isNumber(event)/"
                                            --}}>
                                    </div>
                                    <input type="submit" value="Edit" id="prosub" class="btn btn-block btn-dark">

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>

</div>
</div>